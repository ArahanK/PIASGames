package com.eecs4413final.demo.service;

import com.eecs4413final.demo.model.Customer;
import com.eecs4413final.demo.repository.CustomerRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class CustomerService {

    @Autowired
    private CustomerRepository customerRepository;

    public void registerCustomer(Long userId, String firstName, String lastName, String address,
                                 String zip, String country, String creditCardNumber, String expDate) {
        Customer customer = new Customer();
        customer.setCustomerID(userId);
        customer.setFirstName(firstName);
        customer.setLastName(lastName);
        customer.setAddress(address);
        customer.setZip(zip);
        customer.setCountry(country);
        customer.setCreditCardNumber(creditCardNumber);
        customer.setExpDate(expDate);

        customerRepository.save(customer);
    }
}
